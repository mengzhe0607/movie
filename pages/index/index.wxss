.header{
  background-color: #964B00;
  padding: 20rpx;
  height: 58rpx;
  width: 100%;
  display: flex;
  
}
.search{
  display: flex;
  flex: 1;
}
.search-input{
  background: #6d3e25;
  font-size: 24rpx;
  padding: 0 10rpx;
  border-radius: 4px;
  flex: 1;
}
.placeholder-input{
  color: #ffffff;
}
.header .more{
  width: 180rpx;
  display: flex;
  /* float: right; */
}
.more image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
}
.u-wrp {
  width: 100%;
  height: 400rpx;
  display: block;
  position: relative;
  /* top: 100rpx; */
  background-color: #f0f0f0;
}
.u-img {
   width: 100%;
   height: inherit;
}
.menu{
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  justify-content: space-around;
}
.menu-images image{
    width: 100rpx;
    height: 100rpx;
}
.menu-images{
  width: 180rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.menu-images text{
  font-size: 32rpx;
  margin-top: 10rpx;
}
.content{
  height:  300rpx;
  /* border-bottom: 1px solid #ccc; */
  border-top: 1px solid #ccc;
  /* background-color: #964B00; */
}
.information-left {
    width: 150rpx;
    height: 240rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
    margin-right: 30rpx;
    float: left;
}
.information-left image{
  width: 100%;
  height: 100%;
}
.information-right text{
  font-size: small;
  display: block;
}
.information-right{
  margin-top: 30rpx;
  position: relative;
  height: 240rpx;
}
.information-right button{
  position: absolute;
  right: 20rpx;
  bottom: 0rpx;
}


